@model List<ExamSchedulingSystem.Models.Notification>



<div class="container mt-4">
    @if (Model == null || !Model.Any())
    {
        <p class="text-center">You have no notifications.</p>
    }
    else
    {
        <div class="list-group">
            @foreach (var notification in Model)
            {
                <div class="list-group-item shadow-sm mb-3">
                    <div class="d-flex justify-content-between align-items-center">
                      
                        <div>
                            <p class="mb-1">@notification.Message</p>
                        </div>

                       
                        <form asp-action="DeleteNotification" method="post" class="mb-0">
                            <input type="hidden" name="notificationId" value="@notification.NotificationId" />
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </div>

                    
                    <small class="text-muted">@notification.CreatedAt.ToString("yyyy-MM-dd HH:mm")</small>
                </div>
            }
        </div>
    }
</div>