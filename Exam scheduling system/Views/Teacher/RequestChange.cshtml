@{
    ViewData["Title"] = "RequestChange";
}

@model RequestChangeViewModel
<h2>Exam Reservations</h2>

<table class="table">
    <thead>
        <tr>
            <th>Course Name</th>
            <th>Exam Date</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Room</th>
            <th>Coordinator</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reservation in Model.ExamReservations)
        {
            <tr>
                <td>@reservation.CourseName</td>
                <td>@reservation.ExamDate.ToString("yyyy-MM-dd")</td>
                <td>@reservation.StartTime</td>
                <td>@reservation.EndTime</td>
                <td>@reservation.RoomId</td>
                <td>@reservation.CoordinatorId</td>
                <td>
                    <form asp-action="EnterRequestedChange" method="get">
                        <input type="hidden" name="ReservationId" value="@reservation.ReservationId" />
                        <button type="submit" class="btn btn-primary">Request Change</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
