@model CourseViewModel
@{
    ViewData["Title"] = "AddCourse";
}



<div class="container">
    <h2>Add Course</h2>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center">
            @TempData["SuccessMessage"]
        </div>
    }
    <form asp-action="AddCourse" method="post" class="mb-4">
        <div class="form-group">
            <label asp-for="CourseId"></label>
            <input asp-for="CourseId" type="text" class="form-control" />
            <span asp-validation-for="CourseId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CourseName"></label>
            <input asp-for="CourseName" class="form-control" />
            <span asp-validation-for="CourseName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PrerequisiteId"></label>
            <input asp-for="PrerequisiteId" class="form-control" />
            <span asp-validation-for="PrerequisiteId" type="text" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CourseDepartment"></label>
            <select asp-for="CourseDepartment" class="form-control">
                <option value="">Select a Department</option>
                <option value="Software Engineering">Software Engineering</option>
                <option value="Computer Information Systems">Computer Information Systems</option>
                <option value="Computer Science">Computer Science</option>
                <option value="Information Technology">Information Technology</option>
            </select>
            <span asp-validation-for="CourseDepartment" class="text-danger"></span>
        </div>


        <button type="submit" class="btn btn-primary  mt-4">Add Course</button>
    </form>
</div>
