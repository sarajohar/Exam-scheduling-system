@model ExamSchedulingSystem.Models.ClassRoom

@{
    ViewData["Title"] = "Add Classroom";
}

<div class="container">
    <h2>Add Classroom</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center">
            @TempData["SuccessMessage"]
        </div>
    }

    <form asp-action="AddClassRoom" method="post" class="mb-4">
        <div class="form-group">
            <label asp-for="RoomId" class="form-label">Room ID</label>
            <input asp-for="RoomId" type="text" class="form-control" placeholder="Enter Room ID" required />
            <span asp-validation-for="RoomId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Capacity" class="form-label">Capacity</label>
            <input asp-for="Capacity" type="text" class="form-control" placeholder="Enter Capacity" required />
            <span asp-validation-for="Capacity" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary  mt-4">Add Classroom</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
