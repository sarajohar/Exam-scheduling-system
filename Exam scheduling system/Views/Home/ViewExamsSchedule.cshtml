@{
    ViewData["Title"] = "Exam Schedule";
}
@model List<ExamScheduleViewModel>

<div class="container mt-5">
    <h2 class="text-center mb-5">Exam Schedule</h2>
    <table class="table table-striped table-hover mt-3">
        <thead class="thead-dark">
            <tr>
                <th>Exam Name</th>
                <th>Date</th>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Room</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var exam in Model)
            {
                <tr>
                    <td>@exam.ExamName</td>
                    <td>@exam.ExamDate.ToString("yyyy-MM-dd")</td>
                    <td>@exam.StartTime.ToString(@"hh\:mm")</td>
                    <td>@exam.EndTime.ToString(@"hh\:mm")</td>
                    <td>@exam.Room</td>
                </tr>
            }
        </tbody>
    </table>
</div>
