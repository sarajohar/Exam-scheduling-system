
@{
    ViewData["Title"] = "Faculty Login";
}


<div class="login-container">
    <div class="login-header">
        <h1>EXAM SCHEDULING SYSTEM</h1>
    </div>

    <div class="login-content">
        <img src="@Url.Content("~/image/login.jpg   ")" alt="Login Image" class="login-image" />
        <div class="login-form">
            <h2>LOG IN</h2>
            <form method="post" action="/Faculty/Login">
                <div class="form-group">
                    <label for="ID">ID</label>
                    <input type="text" id="ID" name="ID" />
                </div>
                <div class="form-group">
                    <label for="Password">Password</label>
                    <input type="password" id="Password" name="Password" />
                    <span class="password-eye" onclick="togglePasswordVisibility()">👁</span>
                </div>
                <div class="form-options">
                    <a href="/forgot-password?role=Faculty" class="forgot-password-link">Forgot Password?</a>


                </div>
                <button type="submit" class="login-btn">Login</button>
                <div class="form-footer">
                    <p>Don't have an account? <a href="/signup?role=Faculty" class="signup-link">Sign Up</a></p>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/js/login.js"></script>
<link rel="stylesheet" type="text/css" href="~/css/login.css" />

