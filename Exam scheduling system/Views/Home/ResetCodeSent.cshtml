@model ForgotPasswordViewModel
@{
    ViewData["HideHeader"] = true;
    ViewData["Title"] = "Verify Code";
}

  

    <div class="container-fluid min-vh-100 d-flex align-items-center justify-content-center">
        <div class="row w-100">
            <div class="col-md-6 offset-md-3 d-flex flex-column align-items-center">
                <h3 class="text-center mb-3">VERIFY YOUR IDENTITY</h3>
                <p class="text-center mb-4">we’ve sent you an email </p>

               
                <form method="post" action="/Home/ResetCodeSent" class="w-100" style="max-width: 400px;">
                    <div class="mb-3">
                        <label for="code" class="form-label">Enter Code <span class="text-danger">*</span></label>
                    <input asp-for="Code" class="form-control" id="Code" required />
                    <span asp-validation-for="Code" class="text-danger"></span>
                   
                    </div>
                    <button type="submit" class="btn btn-primary w-100">continue </button>
                </form>

                <div class="text-center mt-3">
                    <a href="#" class="text-muted">Didn’t receive Code?</a>
                </div>
            </div>
        </div>
    </div>

   
@section Scripts {
 <partial name="_ValidationScriptsPartial" />
}