@{
    ViewData["Title"] = "Verify Your Identity";
}

<div class="verify-container">
    <h1>EXAM SCHEDULING SYSTEM</h1>

    <h2>VERIFY YOUR IDENTITY</h2>
    <p>Enter your email to receive reset code</p>

    <form asp-action="RequestPasswordReset" method="post">
        <div class="form-group">
            <label for="email">Email<span class="required">*</span></label>
            <input type="email" id="email" name="email" required />
        </div>

        <button type="submit" class="continue-btn">Continue</button>
    </form>

    @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
    {
        <div class="error-message">@ViewData["ErrorMessage"]</div>
    }
</div>

<link rel="stylesheet" type="text/css" href="~/css/requestPasswordReset.css" />