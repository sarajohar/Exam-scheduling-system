@model SearchCourseByNameViewModel
@{
    ViewData["Title"] = "Search Course by Name";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Search for Exam by Course Name</h2>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="SearchCourseResults" method="get" class="shadow-sm p-4 rounded bg-light">
                <div class="form-group mb-3">
                    <label for="courseName" class="form-label">Enter Course Name:</label>
                    <input asp-for="courseName" type="text" id="courseName" name="courseName" class="form-control" placeholder="Type part of the course name" autofocus>
                    <span asp-validation-for="courseName" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg">Search</button>
                </div>
            </form>
        </div>
    </div>
</div>
